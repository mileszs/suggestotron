<h1>Listing topics</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

   <% @topics.each do |topic| %>
        <tr>
        <td><%= link_to topic.title, topic %></td>
        <td><%= pluralize(topic.votes.length, "vote") %></td>
        <td><%= link_to raw('<i class="icon-thumbs-up"></i>'), votes_path(topic_id: topic.id), method: :post, class: 'btn' %></td>
      </tr>
    <% end %>
</table>

<br />

<%= link_to 'New Topic', new_topic_path %>
